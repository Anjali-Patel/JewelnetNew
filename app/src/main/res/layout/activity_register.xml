<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gss.jbc.register">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:background="#cbb6ff"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/backbutton_register"
                android:src="@drawable/ic_arrow_back_blue_24dp"
                android:layout_width="60dp"
                android:layout_height="40dp" />
        <ScrollView
            android:background="@color/white"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="wrap_content"
                    android:layout_height="145dp"
                    android:layout_marginTop="-15dp"
                    android:src="@drawable/img" />

                <EditText
                    android:inputType="textCapCharacters|textPersonName"
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/shape"
                    android:drawableLeft="@drawable/ic_person_sky_24dp"
                    android:drawablePadding="10dp"
                    android:padding="7dp"
                    android:hint="Name"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890 "
                    android:singleLine="true"
                    android:textAllCaps="true" />

                <EditText
                    android:id="@+id/company"
                    android:inputType="textCapCharacters|text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/shape"
                    android:drawableLeft="@drawable/ic_work_sky_24dp"
                    android:drawablePadding="10dp"
                    android:padding="7dp"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890 "
                    android:hint="Company Name"
                    android:singleLine="true"
                    android:textAllCaps="true" />

                <EditText
                    android:id="@+id/companyAddress"
                    android:layout_width="match_parent"
                    android:inputType="textCapCharacters|text"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="15dp"
                    android:digits="()-.,ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789 "
                    android:drawablePadding="10dp"
                    android:padding="7dp"
                    android:background="@drawable/shape"
                    android:drawableLeft="@drawable/ic_location_on_sky_24dp"
                    android:hint="Company Address"
                    android:singleLine="true"
                    android:textAllCaps="true" />

                <EditText
                    android:id="@+id/user_desig"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:inputType="textCapCharacters|textPersonName"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890 "
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/shape"
                    android:drawableLeft="@drawable/ic_designation_sky_24dp"
                    android:drawablePadding="10dp"
                    android:padding="7dp"
                    android:hint="Designation"
                    android:singleLine="true"
                    android:textAllCaps="true" />

                <EditText
                    android:id="@+id/dob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/shape"
                    android:clickable="true"
                    android:drawablePadding="10dp"
                    android:padding="7dp"
                    android:drawableLeft="@drawable/ic_dob_sky_24dp"
                    android:focusable="false"
                    android:hint="DOB"
                    android:text="" />


                <EditText
                    android:id="@+id/mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/shape"
                    android:drawableLeft="@drawable/ic_call_sky_24dp"
                    android:drawablePadding="10dp"
                    android:padding="7dp"
                    android:enabled="false"
                    android:hint="Mobile"
                    android:digits="1234567890"
                    android:inputType="number"
                    android:singleLine="true" />
                <LinearLayout
                    android:weightSum="10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/otp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="3"
                        android:background="@drawable/shape"
                        android:drawableLeft="@drawable/ic_otp_sky_24dp"
                        android:drawablePadding="10dp"
                        android:padding="7dp"
                        android:enabled="true"
                        android:hint="Enter OTP here"
                        android:inputType="number"
                        android:singleLine="true" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="7"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:textColor="@android:color/black"
                        android:text="OTP" />
                </LinearLayout>
                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapCharacters|textEmailAddress"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/shape"
                    android:drawableLeft="@drawable/ic_email_sky_24dp"
                    android:drawablePadding="10dp"
                    android:padding="7dp"
                    android:hint="Email"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/landline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/shape"
                    android:drawableLeft="@drawable/ic_old_phone"
                    android:drawablePadding="10dp"
                    android:padding="7dp"
                    android:hint="Landline"
                    android:digits="1234567890"
                    android:inputType="number"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/website"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/shape"
                    android:drawableLeft="@drawable/ic_website"
                    android:drawablePadding="10dp"
                    android:padding="7dp"
                    android:hint="Website"
                    android:inputType="textCapCharacters|textPersonName"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890./;:-"
                    android:singleLine="true" />




                <EditText
                    android:id="@+id/pincode"
                    android:layout_width="match_parent"
                    android:inputType="textCapCharacters|text"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="15dp"
                    android:digits="1234567890"
                    android:maxLength="12"
                    android:background="@drawable/shape"
                    android:drawablePadding="10dp"
                    android:padding="7dp"
                    android:drawableLeft="@drawable/ic_location_on_sky_24dp"
                    android:hint="Pincode" />

                <EditText
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapCharacters|text"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="15dp"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890 "
                    android:background="@drawable/shape"
                    android:drawableLeft="@drawable/ic_location_on_sky_24dp"
                    android:drawablePadding="10dp"
                    android:padding="7dp"
                    android:hint="City"
                    android:singleLine="true"
                    android:textAllCaps="true" />

                <EditText
                    android:id="@+id/state"
                    android:layout_width="match_parent"
                    android:inputType="textCapCharacters|text"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="15dp"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890 "
                    android:background="@drawable/shape"
                    android:drawablePadding="10dp"
                    android:padding="7dp"
                    android:drawableLeft="@drawable/ic_location_on_sky_24dp"
                    android:hint="State" />

                <EditText
                    android:inputType="textCapCharacters|text"
                    android:id="@+id/country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/shape"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890 "
                    android:drawableLeft="@drawable/ic_location_on_sky_24dp"
                    android:drawablePadding="10dp"
                    android:padding="7dp"
                    android:hint="Country"
                    android:singleLine="true"
                    android:textAllCaps="true" />
                <!--android:theme="@style/Theme.Design.Light"/>-->


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:padding="8dp">

                    <Spinner
                        android:id="@+id/nat_bus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_spi"
                        android:foregroundTint="#cbb6ff"
                        android:gravity="center"
                        android:padding="7dp"
                        android:textAllCaps="true"
                        android:textColor="#0000ff"
                        android:textSize="20dp">

                    </Spinner>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/point" />


                <LinearLayout
                    android:layout_below="@+id/nat_bus"
                    android:id="@+id/maincheckbox"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/subanture"
                        android:padding="7dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select Sub Nature"
                        android:textSize="16sp" />
                    <LinearLayout
                        android:id="@+id/checkbox1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <CheckBox
                            android:buttonTint="@color/cardview_dark_background"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/checkGold"
                            android:text="Gold" />

                        <CheckBox
                            android:buttonTint="@color/cardview_dark_background"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/checkDiamond"
                            android:text="Diamond" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/checkbox2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/checkbox1"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <CheckBox
                            android:id="@+id/checkPlatinum"
                            android:buttonTint="@color/cardview_dark_background"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Platinum" />

                        <CheckBox
                            android:id="@+id/checkSilver"
                            android:buttonTint="@color/cardview_dark_background"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Silver" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/checkbox3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/checkbox1"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <CheckBox
                            android:id="@+id/checkGemStone"
                            android:buttonTint="@color/cardview_dark_background"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Gem Stone" />

                        <CheckBox
                            android:id="@+id/checkLooseDimond"
                            android:buttonTint="@color/cardview_dark_background"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Loose Dimond" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/checkbox4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/checkbox1"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <CheckBox
                            android:id="@+id/checkLabDiamond"
                            android:buttonTint="@color/cardview_dark_background"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Lab Grown Diamonds" />


                    </LinearLayout>

                </LinearLayout>
                    <EditText
                        android:layout_below="@id/nat_bus"
                        android:id="@+id/allied_sunature"
                        android:visibility="gone"
                        android:inputType="textCapCharacters|text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:layout_marginEnd="8dp"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890 "
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/shape"
                        android:hint="Other.."
                        android:singleLine="true"
                        android:textAllCaps="true" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="7dp"
                    android:padding="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/profile"
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="6dp"
                        android:layout_marginRight="6dp"
                        android:src="@drawable/user" />

                    <TextView
                        android:id="@+id/upload_ProfilePic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="#ffffff"
                        android:text="Upload Profile Photo"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:padding="8dp">

                    <CheckBox
                        android:id="@+id/termsncondi"
                        android:buttonTint="@color/cardview_dark_background"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="I Agree to" />

                    <TextView
                        android:id="@+id/terms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:background="#ffffff"
                        android:text="Terms and Conditions"
                        android:textColor="#0000ff"
                        android:textSize="15dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/sign"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="60dp"
                    android:layout_marginTop="5dp"
                    android:background="#2f1b47"
                    android:text="Sign Up"
                    android:textAllCaps="false"
                    android:textColor="#f79e01"
                    android:textSize="20dp" />
            </LinearLayout>

        </ScrollView>
        </LinearLayout>
            <ProgressBar
                android:id="@+id/register_progress"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
</android.support.v4.widget.DrawerLayout>
