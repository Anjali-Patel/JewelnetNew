<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:weightSum="10"
        android:orientation="vertical"
        android:layout_above="@+id/profileselect"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/image_advertise"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:visibility="gone"/>

        <RelativeLayout
            android:layout_weight="3"
            android:id="@+id/frame_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/play_bt"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/drawableforplay"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:src="@drawable/ic_play_circle_outline_red_24dp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/UserInteractionRelative"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="25dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="start">

            <TextView
                android:id="@+id/LikeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="0"
                android:textStyle="bold"
                android:textColor="@color/statusbar"
                android:textSize="15dp"
                android:gravity="start"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/Like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="Like"
                android:textStyle="bold"
                android:textColor="@color/statusbar"
                android:textSize="15dp"
                android:gravity="start"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/CommentCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="@color/statusbar"
                    android:textSize="15dp"
                    android:gravity="start"
                    android:layout_alignParentLeft="true"
                    />

                <TextView
                    android:id="@+id/CommentButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@color/white"
                    android:text="Comment"
                    android:textStyle="bold"
                    android:textColor="@color/statusbar"
                    android:textSize="15dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="5dp"
                    />


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="end">

                <TextView
                    android:id="@+id/ShareCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="@color/statusbar"
                    android:textSize="15dp"
                    android:gravity="start"
                    android:layout_alignParentLeft="true"
                    />

                <TextView
                    android:id="@+id/Share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="Share"
                    android:textStyle="bold"
                    android:textColor="@color/statusbar"
                    android:textSize="15dp"
                    android:gravity="end"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"/>


            </LinearLayout>



        </RelativeLayout>




<RelativeLayout
    android:id="@+id/descriptionlayout"
    android:layout_weight="7"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp"
            android:textSize="18sp"
            android:textColor="@color/DarkBackground"
            android:ellipsize="end"
            android:scrollbars="none"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView"
            android:autoLink="web"
            android:maxLength="150"
            android:ellipsize="end"
            android:textSize="14sp"
            android:linksClickable="true"
            android:textColorLink="@color/BlueTextcolor"
            android:layout_margin="3dp" />
<!--        android:layout_above="@+id/profileselect"-->

        <TextView
            android:id="@+id/readmore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@color/white"
            android:text="Read More"
            android:padding="7dp"
            android:textStyle="bold"
            android:textColor="@color/BlueTextcolor"
            android:textSize="15dp"
            android:gravity="end" />

    <TextView
        android:id="@+id/Countviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:text="0"
        android:padding="7dp"
        android:textStyle="bold"
        android:textColor="@color/BlueTextcolor"
        android:textSize="15dp"
        android:gravity="start"
        android:visibility="gone"/>
</RelativeLayout>
    </LinearLayout>

        <RelativeLayout
            android:id="@+id/profileselect"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/DarkBackground">



            <!--<ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/profile"
            android:scaleType="fitXY"
            android:src="@drawable/user"
            android:layout_margin="6dp"
            android:background="@drawable/shape_border"/>-->
            <com.makeramen.roundedimageview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile"
                android:layout_width="50dp"
                android:layout_height="48dp"
                android:layout_marginBottom="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:scaleType="fitXY"
                android:src="@drawable/user"
                app:riv_corner_radius="8dip" />

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="6dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="6dp"
                android:layout_toEndOf="@+id/profile"
                android:layout_toRightOf="@+id/profile"
                android:singleLine="true"
                android:text="Test"
                android:textColor="@color/YellowTextcolor" />
            <LinearLayout
                android:layout_toEndOf="@+id/profile"
                android:layout_toRightOf="@+id/profile"
                android:layout_below="@id/profile_name"
                android:layout_width="match_parent"
                android:weightSum="1"
                android:layout_height="wrap_content">
            <TextView
                android:layout_weight=".8"
                android:id="@+id/tvcompny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="6dp"
                android:text="TextView"
                android:ellipsize="end"
                android:maxEms="6"
                android:textSize="12sp"
                android:textColor="@color/YellowTextcolor" />

            <TextView
                android:layout_weight=".2"
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:textSize="12sp"
                android:singleLine="true"
                android:text="address"
                android:textColor="@color/YellowTextcolor"/>

            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/progressBarHolder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.4"
        android:animateLayoutChanges="true"
        android:background="#000000"
        android:visibility="gone">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:text="Wait while loading..."
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </FrameLayout>

</android.support.v7.widget.CardView>