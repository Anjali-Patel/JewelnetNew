<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="1dip" android:color="#2f1b47" />
            <gradient android:angle="-90" android:startColor="#827690" android:endColor="#827690"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="1dip" android:color="#c0bac7" />
            <solid android:color="#c0bac7"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="1dip" android:color="#2a183f" />
            <gradient android:angle="-90" android:startColor="#58486b" android:endColor="#433159" />
        </shape>
    </item>
</selector>